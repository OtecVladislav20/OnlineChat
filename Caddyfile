  email {$CADDY_EMAIL}
}

{$APP_DOMAIN} {
  tls {
    issuer acme {
      dir https://acme-v02.api.letsencrypt.org/directory
    }
  }
  encode gzip zstd

  @api {
    path /api/* /socket.io/*
  }
  reverse_proxy @api backend:3001
  reverse_proxy frontend:80
}

{$LIVEKIT_DOMAIN} {
  tls {
    issuer acme {
      dir https://acme-v02.api.letsencrypt.org/directory
    }
  }
  reverse_proxy livekit:7880
}
